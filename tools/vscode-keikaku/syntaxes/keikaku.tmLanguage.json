{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Keikaku",
    "scopeName": "source.keikaku",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#special-constructs"
        },
        {
            "include": "#control"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#identifiers"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.keikaku",
                    "match": "#.*$"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.keikaku",
                    "match": "\\b(foresee|alternate|otherwise|cycle|while|through|from|to|as|yield)\\b"
                },
                {
                    "name": "keyword.declaration.keikaku",
                    "match": "\\b(designate|protocol)\\b"
                }
            ]
        },
        "special-constructs": {
            "patterns": [
                {
                    "name": "keyword.special.scheme.keikaku",
                    "match": "\\b(scheme|execute)\\b"
                },
                {
                    "name": "keyword.special.preview.keikaku",
                    "match": "\\bpreview\\b"
                },
                {
                    "name": "keyword.special.override.keikaku",
                    "match": "\\boverride\\b"
                },
                {
                    "name": "keyword.special.absolute.keikaku",
                    "match": "\\babsolute\\b"
                },
                {
                    "name": "keyword.special.anomaly.keikaku",
                    "match": "\\banomaly\\b"
                }
            ]
        },
        "control": {
            "patterns": [
                {
                    "name": "keyword.operator.logical.keikaku",
                    "match": "\\b(and|or|not)\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "support.function.builtin.keikaku",
                    "match": "\\b(declare|announce|inquire|measure|span|text|number|decimal|boolean|classify)\\b"
                },
                {
                    "name": "entity.name.function.keikaku",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.assignment.keikaku",
                    "match": ":=|="
                },
                {
                    "name": "keyword.operator.comparison.keikaku",
                    "match": "==|!=|<=|>=|<|>"
                },
                {
                    "name": "keyword.operator.arithmetic.keikaku",
                    "match": "\\*\\*|//|[+\\-*/%]"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.keikaku",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.keikaku",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.keikaku",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.keikaku",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.float.keikaku",
                    "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
                },
                {
                    "name": "constant.numeric.integer.keikaku",
                    "match": "\\b[0-9]+\\b"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.language.boolean.keikaku",
                    "match": "\\b(true|false)\\b"
                }
            ]
        },
        "identifiers": {
            "patterns": [
                {
                    "name": "variable.other.keikaku",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
        }
    }
}